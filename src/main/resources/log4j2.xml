<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="warn">
  <Appenders>
    <File name="File" fileName="${log.file}">
      <PatternLayout>
        <Pattern>%d - %p - %c{1} - %m%n</Pattern>
      </PatternLayout>
    </File>
  </Appenders>
  <Loggers>
    <Logger name="techit" level="${log.level}" additivity="false">
      <AppenderRef ref="File"/>
    </Logger>
    <Root level="warn">
      <AppenderRef ref="File"/>
    </Root>
  </Loggers>
</Configuration>

